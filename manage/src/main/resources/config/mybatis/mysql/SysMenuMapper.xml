	<select id="getMenuListByUserid" resultType="com.bilibala.manage.dao.model.SysMenu" parameterType="java.lang.String">
	    select DISTINCT sm.* from sys_menu sm JOIN sys_func sf ON sm.MENUID = sf.MENUID
		 JOIN sys_role_func srf ON srf.FUNCID = sf.FUNCID
		 JOIN sys_user_role sur ON srf.ROLEID = sur.ROLEID 
		 JOIN sys_role sr ON sr.ROLEID = sur.ROLEID
		 WHERE sr.DISABLE = '0' 
			<if test="userId !='admin'">
				 and sur.USERID= #{userId}
			</if>
			order by menu.sort,menu.parentid
	</select>

