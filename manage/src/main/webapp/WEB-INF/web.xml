<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

	<display-name>Archetype Created Web Application</display-name>

	<!-- 主页登陆页 -->
	<welcome-file-list>
		<welcome-file>login.html</welcome-file>
	</welcome-file-list>

	<!-- spring初识 加载 监听器 -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<!-- 系统加载 监听器 -->
	<listener>
		<listener-class>com.bilibala.manage.listener.InitServletContextListener</listener-class>
	</listener>
	
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath:config/spring/applicationContext*.xml
		</param-value>
	</context-param>
	
	<!-- 转发至 spring 处理 servlet -->
	<servlet>
		<servlet-name>spring</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:config/spring/spring-servlet.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>spring</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	
	<!-- 系统编码 过滤器 -->
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>

	<!-- 记录系统日志过滤器 -->
	<filter>
		<filter-name>SysLogFilter</filter-name>
		<filter-class>com.bilibala.manage.filter.SysLogFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>SysLogFilter</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
		
	<!-- 系统 免登录 过滤器 -->
	<filter>
		<filter-name>popedomFilter</filter-name>
		<filter-class> com.bilibala.manage.filter.PopedomFilter</filter-class>
		<init-param>
			<param-name>skipUnLoginRequestPattern</param-name>
			<param-value>/sys/user/login.do,/sys/user/logout.do</param-value>
		</init-param>
		<init-param>
			<param-name>skipLoginRequestPattern</param-name>
			<param-value>/sys/user/menu.do,/sys/user/wechat_account/switch.do,/sys/menu/oper.do</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>popedomFilter</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	
</web-app>
